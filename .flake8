[flake8]
max-line-length = 100
exclude = 
    .git,
    venv,
    migrations,
    staticfiles,
    __pycache__,
    .eggs,
    build,
    dist
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
per-file-ignores =
    __init__.py:F401
max-complexity = 10
