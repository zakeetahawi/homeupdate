# ======================================
# Django Environment Variables
# ======================================
# انسخ هذا الملف إلى .env وعدّل القيم حسب بيئتك
# cp .env.example .env

# --- Security Settings ---
# SECRET_KEY: مفتاح سري قوي (توليد: python -c 'import secrets; print(secrets.token_hex(50))')
SECRET_KEY=your-secret-key-here-change-me-to-random-50-chars

# DEBUG: وضع التطوير (True) أو الإنتاج (False)
DEBUG=False

# DEVELOPMENT_MODE: للتطوير المحلي فقط
DEVELOPMENT_MODE=False

# --- Allowed Hosts ---
# نطاقات إضافية مسموح بها (مفصولة بفاصلة)
EXTRA_ALLOWED_HOSTS=

# --- Database ---
# إعدادات قاعدة البيانات (إذا لم تكن تستخدم الإعدادات الافتراضية)
# DB_NAME=your_database
# DB_USER=your_user
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# --- HTTPS/SSL Settings ---
# تفعيل إعادة توجيه HTTPS (True في الإنتاج)
SECURE_SSL_REDIRECT=True

# --- Email Settings ---
# إعدادات البريد الإلكتروني (اختياري)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# --- Redis/Cache Settings ---
# عنوان Redis (إذا كنت تستخدمه)
# REDIS_URL=redis://localhost:6379/0

# --- Celery Settings ---
# Broker URL لـ Celery
# CELERY_BROKER_URL=redis://localhost:6379/0

# --- Third-party APIs ---
# Google API (للتكامل مع Google Drive/Sheets)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=

# --- Backup Settings ---
# مسار النسخ الاحتياطية
# BACKUP_DIR=/path/to/backups

# --- Logging ---
# مستوى التسجيل (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# --- Custom Settings ---
# أي إعدادات مخصصة أخرى
